<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-cyan-500 to-gray-50">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Change Your Password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div>
        <%= f.label :password, "New Password", class: "block text-gray-700 font-medium" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mb-1">Minimum <%= @minimum_password_length %> characters</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:border-blue-400" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm New Password", class: "block text-gray-700 font-medium" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:border-blue-400" %>
      </div>

      <div>
        <%= f.submit "Change Password", class: "w-full bg-cyan-500 text-white py-2 rounded-md hover:bg-cyan-600 transition-colors duration-200" %>
      </div>
    <% end %>

  </div>
</div>
