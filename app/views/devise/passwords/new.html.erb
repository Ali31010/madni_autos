<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-cyan-500 to-gray-50 p-6">
  <div class="bg-white shadow-2xl rounded-2xl w-full max-w-md p-8 animate-fadeIn">
    
    <h2 class="text-3xl font-bold text-center mb-6 text-gray-800">
      Forgot Password? ðŸ”‘
    </h2>
    <p class="text-center text-gray-500 mb-6">
      Enter your email address below and weâ€™ll send you reset instructions.
    </p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "space-y-5") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-cyan-500 focus:outline-none" %>
      </div>

      <div>
        <%= f.submit "Send Reset Instructions", 
              class: "w-full bg-cyan-500 text-white py-3 rounded-xl hover:bg-cyan-700 transition font-semibold shadow-lg mt-8" %>
      </div>
    <% end %>

    <div class="text-center mt-6 space-x-4">
      <%= link_to "Back to Login", new_session_path(resource_name),
            class: "text-cyan-600 hover:underline font-medium" %>
      |
      <%= link_to "Sign Up", new_registration_path(resource_name),
            class: "text-cyan-600 hover:underline font-medium" %>
    </div>
  </div>
</div>
