<div class="min-h-screen flex items-center justify-center p-6" style="background-image: url('<%= asset_path('bg-car.png') %>'); background-size: cover; background-position: center;">
  <div class="bg-white/85 backdrop-blur-md shadow-2xl rounded-2xl w-full max-w-xl p-8 animate-fadeIn">

    <h2 class="text-4xl font-semibold text-center text-gray-900 mb-4">
      Create Account
    </h2>
    <p class="text-center text-gray-600 mb-4">
      Join <strong>Madni Autos</strong> and start exploring cars!
    </p>

    <%= form_with model: resource, url: registration_path(resource_name), class: "space-y-6" do |f| %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
        <div>
          <%= f.label :name, "Name", class: "block text-gray-700 font-medium" %>
          <%= f.text_field :name, placeholder: "Full Name", class: "mt-1 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-cyan-500 focus:outline-none" %>
        </div>
        <div>
          <%= f.label :email, "Email", class: "block text-gray-700 font-medium" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "mt-1 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-cyan-500 focus:outline-none" %>
        </div>
        <div>
          <%= f.label :phone, "Phone Number", class: "block text-gray-700 font-medium" %>
          <%= f.text_field :phone, placeholder: "03xxxxxxxxx", class: "mt-1 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-cyan-500 focus:outline-none" %>
        </div>
        <div>
          <%= f.label :cnic, "Upload CNIC", class: "block text-gray-700 font-medium" %>
          <%= f.file_field :cnic, accept: "image/*,.pdf", class: "mt-1 w-full text-gray-700 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-cyan-500 focus:outline-none bg-white" %>
          <p class="text-sm text-gray-500 mt-1">Accepted formats: JPG, PNG, PDF</p>
        </div>
        <div>
          <%= f.label :password, "Password", class: "block text-gray-700 font-medium" %>
          <%= f.password_field :password, autocomplete: "password", placeholder: "Password", class: "mt-1 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-cyan-500 focus:outline-none" %>
        </div>
        <div>
          <%= f.label :password, "Confirm Password", class: "block text-gray-700 font-medium" %>
          <%= f.password_field :password_confirmation, autocomplete: "password", placeholder: "Password", class: "mt-1 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-cyan-500 focus:outline-none" %>
        </div>
      </div>

      <%= f.submit "Sign Up", class: "w-full bg-cyan-600 text-white py-3 rounded-xl hover:bg-cyan-700 transition font-semibold shadow-lg" %>

    <% end %>

    <p class="text-center text-gray-600 mt-6">
      Already have an account?
      <%= link_to "Log in", new_session_path(resource_name), class: "text-cyan-600 hover:underline font-semibold" %>
    </p>

  </div>
</div>
